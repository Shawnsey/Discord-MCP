# Discord Bot Configuration
DISCORD_BOT_TOKEN=your_bot_token_here
DISCORD_APPLICATION_ID=your_application_id_here

# Optional: Restrict access to specific guilds (comma-separated)
# ALLOWED_GUILDS=123456789012345678,987654321098765432

# Optional: Restrict access to specific channels (comma-separated)
# ALLOWED_CHANNELS=123456789012345678,987654321098765432

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS_PER_SECOND=5
RATE_LIMIT_BURST_SIZE=10

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Server Configuration
SERVER_NAME=Discord MCP Server
SERVER_VERSION=0.1.0

# Development Settings
DEBUG=false
DEVELOPMENT_MODE=false
